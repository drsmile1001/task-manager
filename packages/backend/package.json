    "cac": "^6.7.14",
    "elysia": "^1.4.16",
    "kleur": "^4.1.5",
    "quick-lru": "^7.3.0",
    "ulid": "^3.0.2"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^6.0.0",
    "bun-types": "^1.3.3",
    "prettier": "^3.7.2"
  }
}
